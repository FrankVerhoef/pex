#!/bin/bash

#SBATCH --partition gpu
#SBATCH --nodes 1
#SBATCH --gpus 1
#SBATCH --job-name Eval_MSC_Summary
#SBATCH --time 02:00:00
#SBATCH --mem 32G
#SBATCH --output slurm/outputs/eval_%A.out

source ./slurm/.secrets

module purge
module load 2022
module load Anaconda3/2022.05
module load PyTorch/1.12.0-foss-2022a-CUDA-11.7.0
module load Java/11.0.16

source activate pex

#Copy data dir  to scratch
cp -r data  "$TMPDIR"/data
mkdir "$TMPDIR"/output

srun python -u run/main.py eval bart summarize \
	--datadir "$TMPDIR"/data/ \
	--basedir msc/msc_personasummary/ \
	--metrics terp nli  \
	--session 4 \
	--speaker_prefixes \<other\> \<self\> \
	--checkpoint_dir checkpoints/ \
	--load trained_nll05_bart \
	--bart_base facebook/bart-base \
	--do_sample \
	--num_beams 5 \
	--temperature 1.5 \
	--top_p 0.9 \
	--top_k 50 \
	--decoder_max 30 \
	--device cuda \
	--terpdir ~/terp/ \
	--java_home /sw/arch/RHEL8/EB_production/2022/software/Java/11.0.16 \
	--tmpdir "$TMPDIR"/ \
	--log_interval 10 \
	--loglevel DEBUG \
	--output_dir "$TMPDIR"/output/ 

cp "$TMPDIR"/output/* output
