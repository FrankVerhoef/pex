#!/bin/bash

#SBATCH --partition=gpu_shared_course
#SBATCH --gres=gpu:0
#SBATCH --job-name=ENV
#SBATCH --ntasks=1
#SBATCH --cpus-per-task=3
#SBATCH --time=00:30:00
#SBATCH --mem=32000M
#SBATCH --output=slurm/outputs/env_setup_%A.out

module purge
module load 2022
module load Anaconda3/2022.05

conda env remove -n pex
conda create -n pex python=3.9.16 -y
source activate pex
pip install -r requirements.txt
